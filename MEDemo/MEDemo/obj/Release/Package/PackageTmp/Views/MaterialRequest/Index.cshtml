@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles
{
    <style type="text/css">
        #exampleTitle {
            font: 23px/1.6 arial,helvetica,sans-serif;
            font-weight: normal;
            color: #4e4e4e;
        }
        hr {
            margin-top: 5px;
            margin-bottom: 5px;
        }
        .gridIcon {
            background-position: 20px 40px;
        }
        .exampleIcon {
            width: 20px;
            height: 20px;
            float: left;
            margin: 8px 11px 0 0;
            background: no-repeat url(/content/images/sprite.widgets.png);
            -webkit-transform: translate(0);
        }
        #nav-bar {
            margin-bottom: 10px;
        }
        div.request td {
            padding: 5px 10px 5px 10px;
        }
        div.request.grid, div.request.additem {
            padding: 10px;
        }
        div.request.additem ul {
            list-style-type: none;
        }
    </style>
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="metro span12 main">
            <h1 id="exampleTitle">
                <span class="exampleIcon gridIcon"></span>
                <strong>Material Request</strong>
            </h1>
            <div id="tabstrip">
			    <ul>
			        <li class="k-state-active">
                        Request
			        </li>
                    <li>
                        5 Item(s)
			        </li>
                    <li>
                        Add item
                    </li>
			    </ul>
                <div class="request">
                    <table><tbody><tr>
                        <td><label for="request-number">Request No</label></td>
                        <td><span class="k-textbox"><input type="text" id="request-number" name="request-number"/></span></td>
                    </tr>
                    <tr>
                        <td><label for="request-date">Request Date</label></td>
                        <td><input id="request-date" name="request-date" value="1/30/2013" /></td>
                    </tr>
                    <tr>
                        <td><label for="doc-number">Doc Number</label></td>
                        <td><span class="k-textbox"><input type="text" id="doc-number" name="doc-number" /></span></td>
                    </tr>
                    <tr>
                        <td><label for="require-date">Require Date</label></td>
                        <td><input id="require-date" name="require-date" value="1/30/2013" /></td>
                    </tr>
                    <tr>
                        <td><label for="requestor">Requestor</label></td>
                        <td><input id="requestor" name="requestor"/></td>
                    </tr></tbody></table>
                </div>     
                <div class="request grid">
                     <div id="grid-items"></div>
                </div>
                <div class="request additem">
                     <ul>
                         <li>
                            <label for="additem-qty">Qty</label>
                            <input id="additem-qty" name="additem-qty"/>
                         </li>
                     </ul>
                </div>
			</div><!-- tabstrip -->
        </div><!-- metro span12 main -->
    </div><!-- row-fluid -->
</div><!-- container-fluid -->
<footer class="win-commandlayout navbar-fixed-bottom win-ui-dark">
    <div class="container">
        <div class="row">
            <div class="span6 align-left">
                <a class="win-command" href="/Home/Index">
                    <span class="win-commandimage win-commandring">&#x0021;</span>
                    <span class="win-label">Home</span>
                </a>
   
                <hr class="win-command" />
   
                <button class="win-command">
                    <span class="win-commandimage win-commandring">&#xe03e;</span>
                    <span class="win-label">Add</span>
                </button>
   
                <button class="win-command">
                    <span class="win-commandimage win-commandring">&#x0052;</span>
                    <span class="win-label">Save</span>
                </button>
   
                <button class="win-command">
                    <span class="win-commandimage win-commandring">&#xe125;</span>
                    <span class="win-label">Reload</span>
                </button>
            </div>
        </div>
    </div>
</footer>
@section scripts
{
    <script type="text/javascript">
        function createItemExample() {
            return [
                { Index: 1, Code: '001', Name: 'YAMATO CUTTING TORGUE', Qty: 100, Unit: "Pcs", Note: "new item" },
                { Index: 2, Code: '002', Name: 'YAMATO CUTTING TORGUE NOZZLE', Qty: 200, Unit: "Pcs", Note: "" },
                { Index: 3, Code: '003', Name: 'YAMATO CUTTING TORGUE', Qty: 300, Unit: "Pcs", Note: "" },
                { Index: 4, Code: '004', Name: 'PIPE 20"', Qty: 400, Unit: "Pcs", Note: "" },
                { Index: 5, Code: '005', Name: 'TRANSFORMER 2000KVA 20KV/414VOLT 50HZ', Qty: 500, Unit: "Pcs", Note: "" }
            ];
        }

        $(function () {
            $("#backbutton").css('visibility', 'visible');

            $("#requestor").kendoComboBox({
                dataTextField: "text",
                dataValueField: "value",
                dataSource: [
                    { text: "Abet", value: "1" },
                    { text: "Bayu", value: "2" },
                    { text: "Oscar", value: "3" },
                    { text: "Bram", value: "4" }
                ],
                filter: "contains",
                suggest: true,
                index: 1
            });

            $("#grid-items").kendoGrid({
                dataSource: {
                    data: createItemExample(),
                    pageSize: 10
                },
                groupable: false,
                sortable: true,
                pageable: {
                    refresh: true,
                    pageSizes: true
                },
                columns: [{
                    field: "Index",
                    width: 30,
                    title: "No."
                }, {
                    field: "Code",
                    width: 90,
                    title: "Code"
                }, {
                    field: "Name",
                    width: 200,
                    title: "Name"
                }, {
                    field: "Qty",
                    width: 70
                }, {
                    field: "Unit",
                    width: 50
                }, {
                    width: 200,
                    field: "Note"
                }]
            });

            $("#tabstrip").kendoTabStrip({
                animation: {
                    open: {
                        effects: "fadeIn"
                    }
                }
            });

            $("#request-date").kendoDatePicker();
            $("#require-date").kendoDatePicker();
            $("#select-item").kendoNumericTextBox();
            $("#additem-qty").kendoNumericTextBox();
        });
    </script>
}